{
  "failover_config": {
    "mode": "ai_managed_auto_rerouting",
    "detection_threshold_ms": 50,
    "recovery_timeout_ms": 5000,
    "max_retries": 3
  },
  "health_checks": {
    "interval_ms": 10000,
    "timeout_ms": 5000,
    "healthy_threshold": 3,
    "unhealthy_threshold": 2
  },
  "routing_priorities": [
    {
      "name": "emergency_alerts",
      "priority": 1,
      "max_latency_ms": 50,
      "failover_regions": ["us-east-1", "us-west-2", "eu-west-1"]
    },
    {
      "name": "voting_system",
      "priority": 2,
      "max_latency_ms": 100,
      "failover_regions": ["us-east-1", "us-west-2"]
    },
    {
      "name": "legislative_updates",
      "priority": 3,
      "max_latency_ms": 200,
      "failover_regions": ["us-east-1", "us-west-2", "central-states"]
    },
    {
      "name": "ai_processing",
      "priority": 4,
      "max_latency_ms": 500,
      "failover_regions": ["us-east-1"]
    }
  ],
  "circuit_breaker": {
    "enabled": true,
    "failure_threshold": 5,
    "recovery_time_ms": 30000,
    "half_open_requests": 3
  },
  "load_balancing": {
    "algorithm": "weighted_round_robin",
    "health_check_path": "/health",
    "sticky_sessions": false
  }
}
