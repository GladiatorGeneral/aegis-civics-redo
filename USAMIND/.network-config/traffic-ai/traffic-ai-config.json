{
  "traffic_ai": {
    "model": "predictive_load_balancer_v3",
    "training_data": "30_days_rolling",
    "prediction_horizon_minutes": 60,
    "update_interval_seconds": 30
  },
  "predictive_scaling": {
    "enabled": true,
    "min_instances": 5,
    "max_instances": 100,
    "scale_up_threshold": 0.7,
    "scale_down_threshold": 0.3,
    "cooldown_seconds": 300
  },
  "traffic_patterns": {
    "legislative_session": {
      "expected_load_multiplier": 5,
      "pre_scale_minutes": 30,
      "regions": ["us-east-1", "us-west-2"]
    },
    "election_period": {
      "expected_load_multiplier": 10,
      "pre_scale_minutes": 60,
      "regions": ["all"]
    },
    "normal_hours": {
      "peak_hours_utc": ["13:00", "21:00"],
      "weekend_reduction": 0.4
    }
  },
  "anomaly_detection": {
    "enabled": true,
    "sensitivity": "high",
    "alert_threshold": 2.5,
    "auto_mitigate": true
  },
  "ddos_protection": {
    "enabled": true,
    "rate_limit_per_ip": 1000,
    "rate_limit_window_seconds": 60,
    "challenge_threshold": 500
  }
}
